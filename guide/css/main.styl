@import 'nib/reset';
@import 'nib/vendor';
@import 'fonts/entypo';
@import 'fonts/soin';
@import 'fonts/input';

$baseFontSize = 18px;
$baseLineHeight = 2rem;

$backgroundColor = #fff;
$color = #000;
$mayhemPurple = #9d0fd1;
$mayhemPurpleInvert = #fff;

global-reset();
reset-html5();

input,
select,
textarea {
	box-sizing: content-box;
}

html,
body {
	background-color: $backgroundColor;
	color: $color;
	font: $baseFontSize/$baseLineHeight Soin, sans-serif;
}

::selection {
	background-color: lighten($mayhemPurple, 10%);
	color: $mayhemPurpleInvert;
}
::-moz-selection {
	background-color: lighten($mayhemPurple, 10%);
	color: $mayhemPurpleInvert;
}

strong,
.bold {
	font-weight: bold;
}

em {
	font-style: italic;
}

code,
tt {
	font: 13px/1rem Input, monospace;
}

:link,
:visited {
	color: $mayhemPurple;
	text-decoration: none;
}

:link:hover {
	text-decoration: underline;
}

.header {
	background-color: $mayhemPurple;
	color: $mayhemPurpleInvert;
	margin-bottom: $baseLineHeight * 2.25;

	.search {
		background-color: $mayhemPurpleInvert;
		border-radius: 0.5em;
		box-shadow: inset 1px 1px 0 darken($mayhemPurple, 20%);
		cursor: text;
		float: right;
		line-height: 0;
		margin-top: 0.75rem;
		padding: 2px 4px 0 4px;

		.icon-search {
			font-size: 1rem;
			line-height: 0;
			vertical-align: top;

			&:before {
				color: $mayhemPurple;
				margin-right: 0;
			}
		}

		[type='text'] {
			-webkit-appearance: none;
			background: transparent;
			border: none;
			color: $mayhemPurple;
			font: bold 14px/1rem Soin, sans-serif;
			height: 1em;
			margin: 0;
			padding: 0;
			text-transform: uppercase;
			transition: width 0.2s;
			vertical-align: bottom;
			width: 10rem;

			@media (min-width: 920px) {
				&:focus {
					width: 20rem;
				}
			}
		}
	}

	.icon-menu {
		color: $mayhemPurpleInvert;
		cursor: pointer;
		display: none;
		font-size: 0;
		left: 0.6rem;
		line-height: 1rem;
		margin: 0;
		padding: 0;
		position: absolute;
		top: 0.25rem;
		vertical-align: bottom;

		&:before {
			font-size: 1.25rem;
			padding: 0.25rem;
			margin: 0;
		}

		@media (max-width: 920px) {
			display: block;
		}
	}

	.title {
		display: inline-block;
		line-height: 1rem;
		text-transform: uppercase;
		vertical-align: bottom;
	}
}

.wrapper {
	margin: 0 auto;
	max-width: 80rem;
	padding: 0 4rem;
}

.content {
	.nav {
		float: left;
		max-width: 12rem;
	}

	.main {
		margin-left: 16rem;
	}

	@media (max-width: 920px) {
		.nav {
			background-color: $backgroundColor;
			bottom: 0;
			left: 0;
			overflow: auto;
			-webkit-overflow-scrolling: touch;
			padding: 0.5rem 1rem;
			position: fixed;
			top: 2rem;
		}

		.main {
			margin-left: 0;
		}
	}
}

.hljs {
//	display: block;

	.hljs-keyword { color: #aa0d91; font-weight: bold; }
	.hljs-built_in { color: #5c2699; }
	.hljs-string { color: #c41a16; }
	.hljs-comment { color: #006a00; }
}

.main {
	h1,
	h2,
	h3,
	h4,
	h5,
	h6,
	p,
	pre,
	.figure {
		margin-bottom: 2rem;
	}

	h2 {
		text-transform: uppercase;
	}

	h3 {
		font-size: 1.25rem;
		line-height: 1.5rem;
		padding-top: 0.25rem;
		margin-bottom: 0.25rem;
		font-weight: bold;
	}

	h4 {
		font-size: 1.1rem;
		font-weight: bold;
		margin-bottom: 0;
		padding-top: 0.05rem;
	}

	p {
		text-align: justify;
		text-align-last: left;
	}

	pre {
		line-height: 1.25rem; // 8 lines per rhythm
		padding-top: 0.444rem;
		margin-bottom: 1.556rem;
	}

	.caption {
		font-style: italic;

		code {
			font-style: italic;
		}
	}

	.figure {
		border-top: 1px solid #f0f0f0;
		margin-bottom: 3rem; // TODO: Maybe wrong, ends on a half-beat otherwise with a 16-liner
		margin-left: -2rem;
		margin-right: -2rem;
		padding-left: 2rem;
		padding-right: 2rem;
		padding-top: calc(1.39rem - 1px);

		pre {
			padding-top: 0;
			margin-bottom: 1.61rem;
		}

		.caption {
			background-color: #f0f0f0;
			margin-left: -2rem;
			margin-right: -2rem;
			padding-left: 2rem;
			padding-right: 2rem;
		}
	}
}

.nav {
	a {
		display: block;
		font-weight: bold;
		line-height: $baseLineHeight * 0.5;
		margin-bottom: 0.5rem;
		padding-top: 0.5rem;
		text-transform: uppercase;

		&:hover {
			color: $color;
		}
	}

	.subsections {
		display: none;

		a {
			font-weight: normal;
			text-transform: none;
		}
	}

	.active .subsections {
		display: block;
	}
}
